//--------------------------------------------------------------------------------

function ShowActiveReservations(str)
{
	//alert("CAlled Function" + str);
if (str=="")
  {
  document.getElementById("activeReservations").innerHTML="";
  return;
  } 
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
xmlhttp.onreadystatechange=function()
  {
  if (xmlhttp.readyState==4 || xmlhttp.status==200)
    {
    document.getElementById("activeReservations").innerHTML=xmlhttp.responseText;
    }
  }
xmlhttp.open("GET","ip_drop_down.php?mnid="+str,true);
xmlhttp.send();
}
</script>



